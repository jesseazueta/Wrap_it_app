<div class="all_users">
  <div class="users_header">
    <h1 class="users_index_title">People on Wrap-It!</h1>
  </div>
  <% @future_friends.each do |letter, users| %>
  <div class="Letter" id ="contact_list_<%= letter %>">
    <h1 class="upcase"><%=letter.upcase%></h1>
  </div>
  <% users.each do |user| %>
  <ul>
    <li>
      <div class="contact_elements">
        <div class="cont_pic">
          <%=image_tag(user.image, height:'175px', width: '175px',class: "user_pic")%>
        </div>
        <div class="contact_name">
          <strong ><%=user.first_name + " " + user.last_name%></strong>
        </div>
        <div class="friend_button">
          <button class="add-friend" data-user-id=<%= user.id %> >Add Friend</button>
        </div>
        </div>
    </li>
  </ul>
</br>
  <% end %>
  <% end %>
</div>
<div class="empty">
</div>
</div>
<footer>
  <div class="footer_button">
    <div class="image">
      <%= link_to '<i class="fa fa-user" aria-hidden="true"></i>'.html_safe, "/contacts/#{current_user.id}"%>
    </div>
    <div class="text">
      <%= link_to "Contacts", "/contacts/#{current_user.id}"%>
    </div>
  </div>
  <div class="footer_button">
    <div class="image">
      <%= link_to '<i class="fa fa-gift" aria-hidden="true"></i>'.html_safe, "/users/#{current_user.id}"%>
    </div>
    <div class="text">
      <%= link_to "Wrap-It! List", "/users/#{current_user.id}" %>
    </div>
  </div>
  <div class="footer_button">
    <div class="image">
      <%= link_to '<i class="fa fa-plus" aria-hidden="true"></i>'.html_safe, new_gift_path%>
    </div>
    <div class="text">
      <%= link_to "Add To List", new_gift_path %>
    </div>
  </div>
</footer>
