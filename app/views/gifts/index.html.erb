<!-- List all gifts of current user: your own wishlist && wishlist for your contacts/friends -->
<h1> <%= @user.first_name%>'s Wishlist</h1>
<% if @user == current_user%>
<% if params[:category] %>
<ul>
  <% @user.gifts.where(category: params[:category]).each do | gift | %>
  <li>
    <%= link_to gift.name, gift%>
    (<%= link_to "Edit Item", edit_gift_path(gift)%>)
    (<%= link_to "Remove Item", gift, :method => :delete %>)
  </li>
  <% end %>
</ul>
<% else %>
<ul>
  <% @user.gifts.each do |gift| %>
  <li>
    <%= link_to gift.name, gift%>
    (<%= link_to "Edit Item", edit_gift_path(gift)%>)
    (<%= link_to "Remove Item", gift, :method => :delete %>)
  </li>
  <% end %>
</ul>
<% end %>
<% else %>
<% if params[:category] %>
<ul>
  <% @user.gifts.where(category: params[:category]).each do | gift | %>
  <li>
    <%= link_to gift.name, gift%>
  </li>
  <% end %>
</ul>
<% else %>
<ul>
  <% @user.gifts.each do |gift| %>
  <li>
    <%= link_to gift.name, gift%>
  </li>
  <% end %>
</ul>
<% end %>
<% end %>






